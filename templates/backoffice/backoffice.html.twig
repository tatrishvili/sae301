{% extends 'backoffice_base.html.twig' %}

{% block title %}Back-Office - Bubble & Glow{% endblock %}

{% block body %}
    <div class="header-backoffice">
        <div class="header-top">
            <h1>BUBBLE & GLOW - Back Office</h1>
            <a href="{{ path('app_accueil') }}" class="btn-go-home">Accueil</a>
            <div class="date-today">
                {{ "now"|date("l d F Y", "Europe/Paris") }}
            </div>
        </div>

        <div class="header-tabs">
            <button class="tab-btn active" data-tab="reservations">Réservations</button>
            <button class="tab-btn" data-tab="planning">Planning</button>
            <button class="tab-btn" data-tab="map">Géolocalisation</button>
        </div>
    </div>

    <!-- TAB 1: RESERVATIONS -->
    <div class="tab-content active" id="tab-reservations">
        <div class="today-reservations">
            <h2>
                Réservations d'aujourd'hui
                <span class="today-count" id="todayCount"></span>
            </h2>
            <div class="today-list" id="todayList"></div>
        </div>

        <div class="reservations-section">
            <h2>Toutes les réservations</h2>
            <div class="search-bar">
                <input type="text" id="searchName" placeholder="Rechercher par nom ou prénom">
                <input type="text" id="searchEmail" placeholder="Rechercher par email">
                <button onclick="searchReservations()">Rechercher</button>
            </div>

            <table>
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Heure</th>
                    <th>Client</th>
                    <th>Email</th>
                    <th>Prestation(s)</th>
                    <th>Prix</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody id="reservationsTable"></tbody>
            </table>
        </div>
    </div>

    <!-- TAB 2: PLANNING -->
    <div class="tab-content" id="tab-planning">
        <div class="planning-section">
            <h2>Planning des Réservations</h2>
            <div class="planning-calendar">
                <div class="calendar-header">
                    <button type="button" id="prevMonth">◄</button>
                    <h3 id="currentMonthYear"></h3>
                    <button type="button" id="nextMonth">►</button>
                </div>
                <div class="calendar-grid">
                    <div class="calendar-weekdays">
                        <div class="calendar-day-name">Dim</div>
                        <div class="calendar-day-name">Lun</div>
                        <div class="calendar-day-name">Mar</div>
                        <div class="calendar-day-name">Mer</div>
                        <div class="calendar-day-name">Jeu</div>
                        <div class="calendar-day-name">Ven</div>
                        <div class="calendar-day-name">Sam</div>
                    </div>
                    <div class="calendar-days" id="planningGrid"></div>
                </div>
                <div class="calendar-legend">
                    <div class="legend-item">
                        <div class="legend-box legend-available"></div>
                        <span>Disponible</span>
                    </div>
                    <div class="legend-item">
                        <div class="legend-box legend-booked"></div>
                        <span>Réservé</span>
                    </div>
                    <div class="legend-item">
                        <div class="legend-box legend-blocked"></div>
                        <span>Indisponible</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- TAB 3: MAP -->
    <div class="tab-content" id="tab-map">
        <div class="map-section">
            <h2>Clients Géolocalisés</h2>
            <div class="map-container">
                <div class="clients-list" id="clientsList">
                    <h3>Liste des clients</h3>
                    <!-- Generated by JS -->
                </div>
                <div class="map-wrapper">
                    <div id="clientsMap"></div>
                    <div class="map-controls">
                        <button id="mapZoomIn" title="Zoom avant">+</button>
                        <button id="mapZoomOut" title="Zoom arrière">-</button>
                        <button id="mapReset" title="Réinitialiser">⌂</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- MODAL DETAILS -->
    <div class="modal" id="detailsModal" onclick="closeModal(event)">
        <div class="modal-content" id="modalDetails" onclick="event.stopPropagation()"></div>
    </div>
{% endblock %}

{% block javascripts %}
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script>
        const reservations = {{ jsReservations|raw }};
    </script>
    <script src="{{ asset('js/backoffice.js') }}"></script>
{% endblock %}

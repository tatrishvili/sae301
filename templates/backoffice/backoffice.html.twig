{% extends 'backoffice_base.html.twig' %}

{% block title %}Back-Office - Bubble & Glow{% endblock %}

{% block body %}
    <div class="header">
        <h1>BUBBLE & GLOW - Back Office</h1>
        <a href="{{ path('app_accueil') }}" class="btn-go-home">Accueil</a>
        <div class="date-today">
            {{ "now"|date("l d F Y", "Europe/Paris") }}
        </div>
    </div>

    <!-- TODAY'S RESERVATIONS -->
    <div class="today-reservations">
        <h2>
            Réservations d'aujourd'hui
            <span class="today-count" id="todayCount"></span>
        </h2>
        <div class="today-list" id="todayList"></div>
    </div>

    <!-- RESERVATIONS TABLE -->
    <div class="reservations-section">
        <h2>Toutes les réservations</h2>
        <div class="search-bar">
            <input type="text" id="searchName" placeholder="Rechercher par nom ou prénom">
            <input type="text" id="searchEmail" placeholder="Rechercher par email">
            <button onclick="searchReservations()">Rechercher</button>
        </div>

        <table>
            <thead>
            <tr>
                <th>Date</th>
                <th>Heure</th>
                <th>Client</th>
                <th>Email</th>
                <th>Prestation(s)</th>
                <th>Prix</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody id="reservationsTable"></tbody>
        </table>
    </div>

    <!-- MODAL DETAILS -->
    <div class="modal" id="detailsModal" onclick="closeModal(event)">
        <div class="modal-content" id="modalDetails" onclick="event.stopPropagation()"></div>
    </div>

    <!-- PLANNING CALENDAR -->
    <div class="planning-section">
        <h2>Planning</h2>
        <div class="planning-calendar">
            <div class="calendar-header">
                <button type="button" id="prevMonth">◄</button>
                <h3 id="currentMonthYear"></h3>
                <button type="button" id="nextMonth">►</button>
            </div>
            <div class="calendar-grid" id="planningGrid"></div>
        </div>
    </div>

    <!-- MAP -->
    <div class="map-section">
        <h2>Clients géolocalisés</h2>
        <div id="clientsMap" style="width: 100%; height: 500px; border-radius: 15px;"></div>
    </div>
{% endblock %}

{% block javascripts %}
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script>
        const reservations = {{ jsReservations|raw }};
    </script>
    <script src="{{ asset('js/backoffice.js') }}"></script>
{% endblock %}

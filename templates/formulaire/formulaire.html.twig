{% extends 'base.html.twig' %}

{% block title %}Réservation - Bubble & Glow{% endblock %}

{% block body %}
    <div class="formulaire-page">
        <div class="formulaire-container">
            <div class="logo-section">
                <div class="logo">
                    <img src="{{ asset('images/formulaire/logo.svg') }}" class="bubble" alt="logo">
                </div>
                <div class="brand-name">BUBBLE & GLOW</div>
            </div>

            <div class="progress-bar">
                {% for i, step in ['Informations personnelles', 'Choisir un créneau', 'Adresse', 'Confirmation et paiement'] %}
                    <div class="progress-step {{ i == 0 ? 'active' : '' }}" data-step="{{ i+1 }}">
                        <span>{{ step }}</span>
                        <div class="progress-line"><div class="progress-line-fill"></div></div>
                    </div>
                {% endfor %}
            </div>

            <form id="reservationForm" method="POST" action="{{ path('reservation_submit') }}">
                <!-- STEP 1 -->
                <div class="form-step active" data-step="1">
                    <h2>Entrez vos informations personnelles</h2>
                    <div class="form-group">
                        <input type="text" id="nom" name="nom" placeholder="Dupont" required>
                    </div>
                    <div class="form-group">
                        <input type="text" id="prenom" name="prenom" placeholder="Marie" required>
                    </div>
                    <div class="form-group">
                        <div class="phone-group">
                            <input type="text" class="phone-prefix" value="+33" readonly>
                            <input type="tel" id="telephone" name="telephone" placeholder="6 12 34 56 78" inputmode="numeric" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="email" id="email" name="email" placeholder="marie.dupont@exemple.fr" required>
                    </div>
                </div>

                <!-- STEP 2 -->
                <div class="form-step" data-step="2">
                    <h2>Choisissez votre ville</h2>
                    <div class="ville-options">
                        <label><input type="radio" id="ville_troyes" name="ville" value="Troyes" checked required>Troyes</label>
                        <label><input type="radio" id="ville_nogent" name="ville" value="Nogent sur Seine">Nogent sur Seine (+5€)</label>
                        <label><input type="radio" id="ville_bar" name="ville" value="Bar sur Aube">Bar sur Aube (+5€)</label>
                    </div>

                    <h2>Entrez la prestation souhaitée</h2>
                    <div id="servicesContainer">
                        <div class="form-group service-item">
                            <div class="service-selector">
                                <select class="prestation" name="prestations[]" required>
                                    <option value="">Choisissez une prestation</option>
                                    <option value="manucure">MANUCURE (45€)</option>
                                    <option value="pedicure">PÉDICURE (40€)</option>
                                    <option value="soin-visage">SOIN VISAGE (60€)</option>
                                    <option value="maquillage">MAQUILLAGE (50€)</option>
                                    <option value="soin-corps">SOIN CORPS (70€)</option>
                                    <option value="epilation">ÉPILATION (20€)</option>
                                </select>
                                <button type="button" class="add-btn">+</button>
                                <button type="button" class="remove-btn">-</button>
                            </div>
                            <input type="text" class="precision" name="precisions[]" placeholder="Précisions sur la prestation">
                        </div>
                    </div>

                    <h2>Entrez le créneau souhaité</h2>
                    <div class="calendar">
                        <div class="calendar-header">
                            <button type="button" class="calendar-nav" id="prevMonth">◄</button>
                            <h3 id="currentMonthYear">Janvier 2026</h3>
                            <button type="button" class="calendar-nav" id="nextMonth">►</button>
                        </div>
                        <div class="calendar-grid" id="calendarGrid"></div>
                    </div>

                    <input type="hidden" id="dateReservation" name="date_reservation" required>

                    <div class="form-group">
                        <select class="time-selector" id="horaire" name="horaire" required>
                            <option value="">Sélectionnez un horaire</option>
                            <option value="9h00-10h30">9h00-10h30</option>
                            <option value="11h00-12h30">11h00-12h30</option>
                            <option value="14h00-15h30">14h00-15h30</option>
                            <option value="15h30-17h00">15h30-17h00</option>
                            <option value="17h30-19h00">17h30-19h00</option>
                        </select>
                    </div>
                </div>

                <!-- STEP 3 -->
                <div class="form-step" data-step="3">
                    <h2>Entrez votre adresse postale</h2>
                    <div class="form-group">
                        <label for="adresse">Adresse*</label>
                        <input type="text" id="adresse" name="adresse" placeholder="12 rue de la Paix" required>
                    </div>
                    <div class="form-group">
                        <label for="complement">Complément d'adresse</label>
                        <input type="text" id="complement" name="complement" placeholder="Bâtiment B, 3ème étage...">
                    </div>
                    <div class="two-cols">
                        <div class="form-group">
                            <label for="codePostal">Code postal*</label>
                            <input type="text" id="codePostal" name="code_postal" placeholder="10000" maxlength="5" inputmode="numeric" required>
                        </div>
                        <div class="form-group">
                            <label for="ville">Ville*</label>
                            <input type="text" id="ville" name="ville_input" placeholder="Troyes" required>
                        </div>
                    </div>
                </div>

                <!-- STEP 4 -->
                <div class="form-step" data-step="4">
                    <h2>Récapitulatif</h2>
                    <div class="summary-section">
                        <div class="summary-line" id="summaryName">-</div>
                        <div class="summary-line" id="summaryPhone">-</div>
                        <div class="summary-line" id="summaryEmail">-</div>
                        <div class="summary-line" id="summaryBooking">-</div>
                        <div class="summary-line" id="summaryAddress">-</div>
                    </div>
                    <div class="recap">
                        <div id="pricesContainer"></div>
                    </div>
                    <div class="price-line" style="font-size:1.5em; font-weight:bold; color:white; margin-bottom:20px;">
                        <span>Total</span>
                        <span id="totalPrice">0€</span>
                    </div>

                    <h2>Paiement</h2>
                    <div class="payment-card">
                        <div class="form-group">
                            <label for="cardNumber">Numéro de carte</label>
                            <input type="text" id="cardNumber" name="cardNumber" placeholder="1234 5678 9012 3456" maxlength="16" inputmode="numeric" required>
                        </div>
                        <div class="two-cols">
                            <div class="form-group">
                                <label for="cardExpiry">Date d'expiration</label>
                                <input type="text" id="cardExpiry" name="cardExpiry" placeholder="MM/AA" maxlength="5" inputmode="numeric" required>
                            </div>
                            <div class="form-group">
                                <label for="cardCVC">CVC</label>
                                <input type="text" id="cardCVC" name="cardCVC" placeholder="123" maxlength="3" inputmode="numeric" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="titulaire_carte">Nom du titulaire</label>
                            <input type="text" id="titulaire_carte" name="titulaire_carte" placeholder="JOHN DOE" required>
                        </div>
                        <button type="button" class="validate-btn">Valider</button>
                        <p id="paymentMessage" class="payment-message"></p>
                    </div>

                    <div class="mini-summary">
                        <div class="logoformu">
                            <img src="{{ asset('images/formulaire/logoformulaire.svg') }}">
                        </div>
                    </div>
                </div>

                <div class="navigation">
                    <button type="button" class="nav-btn" id="prevBtn" disabled>←</button>
                    <button type="button" class="nav-btn" id="nextBtn">→</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
